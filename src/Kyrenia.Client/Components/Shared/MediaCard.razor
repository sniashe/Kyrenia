@using Kyrenia.Contracts.DTOs

@inject NavigationManager NavigationManager

<MudCard @onclick="NavigateToDetails"
         Class="mx-2 my-2" Style="width: 300px; cursor: pointer">
    <MudCardMedia Image="@Media.Poster" Height="400" />
    <MudCardContent>
        <MudText Typo="Typo.button">@Media.Title (@Media.Year)</MudText>
    </MudCardContent>
</MudCard>

@code {
    [Parameter]
    [EditorRequired]
    public MediaDetailsDto Media { get; init; }

    private void NavigateToDetails()
    {
        NavigationManager.NavigateTo($"/title/{Media.ExternalId}");
    }
}
